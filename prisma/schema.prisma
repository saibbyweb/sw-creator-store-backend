generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator nestgraphql {
  provider              = "node node_modules/prisma-nestjs-graphql"
  output                = "../src/---generated---"
  emitSingle            = true
  fields_Validator_from = "class-validator"
  emitBlocks            = ["models", "enums", "inputs", "args"]
  omitModelsCount       = true
}

enum Role {
  ADMIN
  USER
  INFLUENCER
}

type Address {
  street     String
  city       String
  state      String
  postalCode String
  country    String
}

enum SocialPlatform {
  INSTAGRAM
  TIKTOK
  YOUTUBE
  FACEBOOK
  X
  LINKEDIN
  PINTEREST
  REDDIT
  EMAIL
  URL
}

enum Font {
  MONTSERRAT
  ROBOTO
  POPPINS
}

type SocialLink {
  platform SocialPlatform
  url      String
}

model Session {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  influencerId String?     @db.ObjectId
  influencer   Influencer? @relation(fields: [influencerId], references: [id])
  token        String      @unique
  valid        Boolean     @default(true)
  expiresAt    DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([influencerId])
}

model Influencer {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  username    String       @unique
  email       String       @unique
  password    String
  role        Role         @default(INFLUENCER)
  countryCode String
  phoneNumber String
  address     Address
  socialLinks SocialLink[]

  // Stripe Payout Details
  stripeOnboardingComplete Boolean @default(false)
  chargesEnabled           Boolean @default(false)
  payoutsEnabled           Boolean @default(false)
  detailsSubmitted         Boolean @default(false)
  stripeAccountId          String? @unique
  stripeAccountType        String?

  //Stripe Payment Details
  stripeCustomerId String? @unique

  // Google Calendar Integration
  googleCalendarConnected Boolean   @default(false)
  googleAccessToken       String?
  googleRefreshToken      String?
  googleTokenExpiry       DateTime?

  // Zoom Integration
  zoomConnected    Boolean   @default(false)
  zoomAccessToken  String?
  zoomRefreshToken String?
  zoomTokenExpiry  DateTime?

  displayName    String?
  bio            String?
  profilePicture String?

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  stores                  Store[]
  media                   Media[]
  sessions                Session[]
  paymentMethods          InfluencerPaymentMethod[]
  influencerPayments      InfluencerPayment[]
  influencerSubscriptions InfluencerSubscription[]
}

enum PaymentMethodType {
  CREDIT_CARD
  DEBIT_CARD
  BANK_ACCOUNT
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
  UNPAID
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PlanInterval {
  MONTHLY
  YEARLY
}

enum Currency {
  USD
  EUR
  GBP
}

enum TaxBehaviour {
  INCLUSIVE
  EXCLUSIVE
}

model InflucenerPlan {
  id                        String       @id @default(auto()) @map("_id") @db.ObjectId
  name                      String
  priceInLowestDenomination Int
  currency                  Currency
  interval                  PlanInterval
  stripePriceId             String?      @unique
  intervalCount             Int
  taxBehaviour              TaxBehaviour
  deletedAt                 DateTime?
  createdAt                 DateTime     @default(now())
  updatedAt                 DateTime     @updatedAt

  influencerSubscriptions InfluencerSubscription[]
}

model InfluencerSubscription {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  influencerId String         @db.ObjectId
  influencer   Influencer     @relation(fields: [influencerId], references: [id])
  planId       String         @db.ObjectId
  plan         InflucenerPlan @relation(fields: [planId], references: [id])

  stripeSubscriptionId String?            @unique
  status               SubscriptionStatus
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAt             DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  active               Boolean            @default(true)

  defaultPaymentMethodId String? @db.ObjectId

  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  influencerPayments InfluencerPayment[]

  @@index([influencerId])
  @@index([planId])
}

model InfluencerPaymentMethod {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  last4        String?
  brand        String?
  country      String?
  funding      String?
  expMonth     Int?
  expYear      Int?
  influencerId String     @db.ObjectId
  influencer   Influencer @relation(fields: [influencerId], references: [id])

  stripePaymentMethodId String? @unique
  default               Boolean @default(false)

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([influencerId])
}

model InfluencerPayment {
  id             String                  @id @default(auto()) @map("_id") @db.ObjectId
  influencerId   String                  @db.ObjectId
  influencer     Influencer              @relation(fields: [influencerId], references: [id])
  subscriptionId String?                 @db.ObjectId
  subscription   InfluencerSubscription? @relation(fields: [subscriptionId], references: [id])

  amountInLowestDenomination Int
  currency                   Currency
  stripePaymentIntentId      String?       @unique
  stripeChargeId             String?       @unique
  stripeRefundId             String?       @unique
  status                     PaymentStatus
  createdAt                  DateTime      @default(now())
  updatedAt                  DateTime      @updatedAt

  @@index([influencerId])
}

enum ProductStyle {
  BUTTON
  CALLOUT
  EMBED
}

enum ProductType {
  MEET
  COURSE
  GUIDE
  WEBINAR
  PERSONALIZED_VIDEO
}

model Product {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  style      ProductStyle
  type       ProductType
  url        String
  position   Int
  mediaId    String?      @db.ObjectId
  media      Media?       @relation(fields: [mediaId], references: [id])
  title      String?
  subTitle   String?
  buttonText String?

  storeId   String  @db.ObjectId
  store     Store   @relation(fields: [storeId], references: [id])
  published Boolean

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([storeId])
}

enum StoreDesign {
  CLASSIC
  MODERN
  CONTEMPORARY
  MINIMALISTIC
}

model Store {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  slug           String      @unique
  name           String
  design         StoreDesign
  primaryColor   String
  secondaryColor String
  font           Font

  influencerId String     @db.ObjectId
  influencer   Influencer @relation(fields: [influencerId], references: [id])

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@index([influencerId])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  OTHER
}

enum MediaPrivacy {
  PUBLIC
  PRIVATE
  SUBSCRIBERS_ONLY
}

model Media {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  key          String
  type         MediaType
  influencerId String       @db.ObjectId
  influencer   Influencer   @relation(fields: [influencerId], references: [id])
  privacy      MediaPrivacy @default(PUBLIC)

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  products Product[]

  @@index([influencerId])
}
